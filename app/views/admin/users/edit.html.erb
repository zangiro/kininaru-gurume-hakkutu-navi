<div class="container min-vh-100 bg-danger-subtle">
  <div class="row">
    <h2><%= t(".page_title") %></h2>
    <h1><%= t(".user_name_is", user_name: @user.name) %></h1>

    <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="mb-3">
        <%= f.label :email, t("users.edit.email_required"), class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :account_status, t("users.edit.account_status"), class: "form-label" %>
        <%= f.select :account_status, [[ t(".account_status_select_normal"), 0], [ t(".account_status_select_stop"), 1]], { include_blank: true }, class: "form-control" %>
      </div>

      <div class="mt-3">
        <%= f.submit t("helpers.submit.change"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to t("helpers.link.user_index"), admin_users_path %>
    <%= link_to t("helpers.link.admin_top"), admin_homes_path %>
  </div>
</div>